<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/twoButtonLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="@color/battle_ui_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What will you do?"
        android:textColor="@color/battle_ui_text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonFight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Fight"
            android:textColor="@color/battle_button_text"
            android:backgroundTint="@color/battle_button_fight"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/buttonParty"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Party"
            android:textColor="@color/battle_button_text"
            android:backgroundTint="@color/battle_button_party"
            android:layout_margin="4dp"/>
    </LinearLayout>
</LinearLayout>