<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8">

    <!-- Main content container -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top-left menu button -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e3e3e3">

            <ImageButton
                android:id="@+id/buttonOpenMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:layout_gravity="top|start"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Open Menu"
                android:src="@android:drawable/ic_menu_sort_by_size" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Random Battle"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#444444"
                android:padding="8dp"/>
        </FrameLayout>

        <!-- BATTLE UI (sprites, names, HP bars) -->
        <FrameLayout
            android:id="@+id/battleTopUI"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#e8f4f8">  <!-- Simple light blue background -->

            <!-- Battle UI Elements -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Opponent side -->
                <LinearLayout
                    android:id="@+id/opponentSide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#B3FFFFFF">

                        <TextView
                            android:id="@+id/opponentName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Opponent"
                            android:textColor="#444444"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="4dp" />

                        <TextView
                            android:id="@+id/opponentInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Opponent's Pokemon Lv.50"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HP"
                                android:textColor="#666666"
                                android:textSize="12sp"
                                android:layout_marginEnd="8dp"/>

                            <ProgressBar
                                android:id="@+id/opponentHP"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="12dp"
                                android:progressDrawable="@android:drawable/progress_horizontal"
                                android:progress="100" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/opponentSprite"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <!-- Player side -->
                <LinearLayout
                    android:id="@+id/playerSide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/playerSprite"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp"
                        android:background="#B3FFFFFF">

                        <TextView
                            android:id="@+id/playerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="You"
                            android:textColor="#444444"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="4dp" />

                        <TextView
                            android:id="@+id/playerInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Pokemon Lv.50"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HP"
                                android:textColor="#666666"
                                android:textSize="12sp"
                                android:layout_marginEnd="8dp"/>

                            <ProgressBar
                                android:id="@+id/playerHP"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="12dp"
                                android:progressDrawable="@android:drawable/progress_horizontal"
                                android:progress="100" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>

        <!-- Battle log with Showdown-like styling -->
        <ScrollView
            android:id="@+id/scrollLogContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#f8f8f8"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/battleLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:textSize="14sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp"
                android:fontFamily="sans-serif"/>
        </ScrollView>

        <!-- Controls shown at bottom -->
        <FrameLayout
            android:id="@+id/controlsContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#e3e3e3" />
    </LinearLayout>

    <!-- Overlay for menu fragment - side panel -->
    <FrameLayout
        android:id="@+id/menuFragmentContainer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:visibility="gone" />
</FrameLayout>
