<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/battle_ui_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose a move"
        android:textColor="@color/battle_ui_text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/move1"
            android:tag="1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Move 1"
            android:textColor="@color/battle_button_text"
            android:backgroundTint="@color/battle_button_move"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/move2"
            android:tag="2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Move 2"
            android:textColor="@color/battle_button_text"
            android:backgroundTint="@color/battle_button_move"
            android:layout_margin="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <Button
            android:id="@+id/move3"
            android:tag="3"
            android:text="Move 3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/battle_button_text"
            android:backgroundTint="@color/battle_button_move"
            android:layout_margin="2dp">
        </Button>

        <Button
            android:id="@+id/move4"
            android:tag="4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Move 4"
            android:layout_height="wrap_content"
            android:textColor="@color/battle_button_text"
            android:backgroundTint="@color/battle_button_move"
            android:layout_margin="2dp">
        </Button>

    </LinearLayout>

    <Button
        android:id="@+id/buttonFormChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Form Change"
        android:textColor="@color/battle_button_text"
        android:backgroundTint="@color/battle_button_fight"
        android:layout_margin="2dp"/>

    <!-- Added weight to push the back button to the bottom -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/buttonBackFight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@color/battle_button_back_text"
        android:backgroundTint="@color/battle_button_back"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_margin="2dp"/>
</LinearLayout>