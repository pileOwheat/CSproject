<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/battle_ui_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Switch Pokemon"
        android:textColor="@color/battle_ui_text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <GridLayout
        android:columnCount="3"
        android:rowCount="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false">

        <Button
            android:id="@+id/party1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Mon1"
            android:textColor="@color/battle_button_text"
            android:backgroundTint="@color/battle_button_party"
            android:layout_margin="2dp"
            android:textSize="12sp"
            android:padding="8dp"/>
        <Button
            android:id="@+id/party2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Mon2"
            android:textColor="@color/battle_button_text"
            android:backgroundTint="@color/battle_button_party"
            android:layout_margin="2dp"
            android:textSize="12sp"
            android:padding="8dp"/>
        <Button
            android:id="@+id/party3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Mon3"
            android:textColor="@color/battle_button_text"
            android:backgroundTint="@color/battle_button_party"
            android:layout_margin="2dp"
            android:textSize="12sp"
            android:padding="8dp"/>
        <Button
            android:id="@+id/party4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Mon4"
            android:textColor="@color/battle_button_text"
            android:backgroundTint="@color/battle_button_party"
            android:layout_margin="2dp"
            android:textSize="12sp"
            android:padding="8dp"/>
        <Button
            android:id="@+id/party5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Mon5"
            android:textColor="@color/battle_button_text"
            android:backgroundTint="@color/battle_button_party"
            android:layout_margin="2dp"
            android:textSize="12sp"
            android:padding="8dp"/>
        <Button
            android:id="@+id/party6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Mon6"
            android:textColor="@color/battle_button_text"
            android:backgroundTint="@color/battle_button_party"
            android:layout_margin="2dp"
            android:textSize="12sp"
            android:padding="8dp"/>
    </GridLayout>

    <Button
        android:id="@+id/buttonBackParty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@color/battle_button_back_text"
        android:backgroundTint="@color/battle_button_back"
        android:layout_marginTop="8dp"
        android:layout_margin="2dp"/>
</LinearLayout>