<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CSproject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dark theme colors -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:windowBackground">@color/background_secondary_dark</item>
        
        <!-- Card and panel backgrounds -->
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <item name="panelBackgroundColor">@color/card_background_dark</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorTertiary">@color/text_tertiary_dark</item>
        <item name="android:textColorHint">@color/text_tertiary_dark</item>
        
        <!-- Button colors -->
        <item name="buttonBackgroundColor">@color/button_background</item>
        <item name="buttonTextColor">@color/button_text</item>
        
        <!-- Divider colors -->
        <item name="dividerColor">@color/divider_dark</item>
    </style>
</resources>